{
	"window.titleBarStyle": "custom",
	"window.zoomLevel": 0,

	"workbench.startupEditor": "newUntitledFile",
	"workbench.colorTheme": "Default Dark Modern",
	"workbench.editor.enablePreview": true,

	"explorer.openEditors.visible": 1,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.compactFolders": false,
	"explorer.decorations.colors": false,

	"files.trimFinalNewlines": true,
	"files.exclude": {
		"*.gitattributes": true,
		"*.gitignore": true,
		"**/.DS_Store": true,
		"**/.git": true,
		"**/.vs": true,
		"**/.vscode": true,
		"**/.idea": true,
		// Unity
		"*/bin": true,
		"*/obj": true,
		"*.meta": true
	},
	"files.associations": {
		".mudconfig": "tsv",
		".mudsettings": "ini"
	},

	// Breadcrumbs
	"breadcrumbs.enabled": true,
	"breadcrumbs.symbolPath": "off",

	// Editor
	"editor.codeLens": true,
	"editor.roundedSelection": false,
	"editor.colorDecorators": true,
	"editor.cursorBlinking": "smooth",
	"editor.renderWhitespace": "none",
	"editor.renderControlCharacters": false,
	"editor.tabCompletion": "on",
	"editor.wordWrap": "on",
	"editor.unicodeHighlight.nonBasicASCII": false,
	"editor.minimap.enabled": false,
	"editor.maxTokenizationLineLength": 1000000000000000000000000000000000000000,
	"security.workspace.trust.banner": "never",
	"security.workspace.trust.untrustedFiles": "open",

	// Editor fonts
	"editor.fontFamily": "'Cascadia Code', 'Roboto Mono', 'Consolas'",
	"editor.fontSize": 13,
	"editor.fontWeight": 400,
	"editor.formatOnSave": false,
	"editor.fontLigatures": true,

	// Tabulation settings
	"editor.tabSize": 4,
	"editor.useTabStops": true,
	"editor.insertSpaces": false,
	"editor.detectIndentation": true,
	"editor.formatOnType": true,
	"editor.formatOnPaste": true,

	// Terminal
	"terminal.integrated.fontFamily": "'Cascadia Code', 'CaskaydiaCove Nerd Font', 'Roboto Mono', 'Consolas'",
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.fontWeight": 400,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.sendKeybindingsToShell": true,
	"telemetry.telemetryLevel": "off",

	"git.autofetch": true,
	"diffEditor.wordWrap": "off",

	"html.autoClosingTags": true,
	"html.format.enable": true,
	"html.format.wrapLineLength": 160,

	// Misc
	"remoteHub.commitDirectlyWarning": "off",

	// danielgjackson.auto-dark-mode-windows
	"window.autoDetectColorScheme": true,
	"workbench.preferredDarkColorTheme": "Default Dark Modern",
	"workbench.preferredLightColorTheme": "Default Light Modern",
}